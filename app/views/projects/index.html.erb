<p id="notice"><%= notice %></p>

<h3>Active Projects</h3>

<div class="container block">
    <% @projects.each do |project| %>
        <% if project.active %>
            <div class="col-md-3 col-sm-6">
                <%= link_to project do %>
                    <div class="panel panel-info">
                        <div class="panel-heading projects-index-box">
                            <span><%= project.name %></span>
                        </div>
                        <div class="panel-heading projects-index-box" style="padding-left: 1px; padding-right: 1px;">
                            <div style="display: inline">
                                <div style="border-radius: 50%; margin: 1px 1px 1px 3px; border: 1px solid grey; width: 15px; height: 15px; display: inline-block; background-color: <%= 'green' if project.status == 'Green' %>"></div>
                                <div style="border-radius: 50%; margin: 1px; border: 1px solid grey; width: 15px; height: 15px; display: inline-block; background-color: <%= 'yellow' if project.status == 'Amber' %>"></div>
                                <div style="border-radius: 50%; margin: 1px; border: 1px solid grey; width: 15px; height: 15px; display: inline-block; background-color: <%= 'red' if project.status == 'Red' %>"></div>
                            </div>
                            <div style="display: inline">
                                <div style="background-color: white; display: inline-block; min-width: 60%; border: 1px solid darkgrey;">
                                    <div style="min-width: 2em; width: <%= project.experiment_completion * 100 %>%; background-color: #428bca; color: white;">
                                        <%= number_to_percentage(project.experiment_completion * 100, precision: 0) %>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel-heading projects-index-box">
                            <span class="glyphicon glyphicon-user"> <%= project.created_by.name %></span>
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    <% end %>
    <div class="col-md-3 col-sm-6 text-center">
        <%= link_to new_project_path do %>
          <div class="panel panel-default">
              <div class="panel-body" style="height: 120px">
                  <span>Create a new project..</span>
              </div>
          </div>
        <% end %>
    </div>
</div>

<br>


<h3>Past Projects</h3>

<% if (@projects.select { |p| p[:active] == false }).empty? %>
    <div class="container">
        <div class="col-md-3 col-sm-6 text-center">
            <p>No past projects yet</p>
        </div>
    </div>
<% end %>

<div class="container block">
    <% @projects.each do |project| %>
        <% if !project.active %>
            <div class="col-md-3 col-sm-6">
                <%= link_to project do %>
                    <div class="panel panel-default">
                        <div class="panel-heading projects-index-box">
                            <span><%= project.name %> hasfsafs hgfhasgf hsgfhasg hgfashfg ahgsfhsafg hgfas</span>
                        </div>
                        <div class="panel-heading projects-index-box">
                            <span class="glyphicon glyphicon-user"> <%= project.created_by.name %></span>
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
    <% end %>
</div>
