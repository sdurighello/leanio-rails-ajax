<p id="notice"><%= notice %></p>

<h1>Team_members for <%= @project.name %></h1>
<br>

<table>
  <thead>
    <tr>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @team_members.each do |team_member| %>
      <tr>
        <td><%= team_member.role %></td>
        <td><%= link_to 'Show', project_team_member_path(@project.id, team_member) %></td>
        <td><%= link_to 'Edit', edit_project_team_member_path(@project.id, team_member) %></td>
        <td><%= link_to 'Destroy', project_team_member_path(@project.id, team_member), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team Member', new_project_team_member_path(@project.id) %>
