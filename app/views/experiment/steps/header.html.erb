
<h1>Step 1 - Experiment header</h1>

<div class="col-sm-6">
  <%= bootstrap_form_for([@project, @phase, @experiment], method: :put, url: wizard_path) do |f| %>
    <% if @experiment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@experiment.errors.count, "error") %> prohibited this experiment from being saved:</h2>

        <ul>
        <% @experiment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :phase_id, value: @phase.id %>
    <%= f.hidden_field :start_date, value: @experiment.start_date %>
    <%= f.hidden_field :end_date, value: @experiment.end_date %>

    <%= f.text_field :name %>
    <%= f.check_box :completed %>

    <%= f.submit 'Next step' %>

  <% end %>
</div>
