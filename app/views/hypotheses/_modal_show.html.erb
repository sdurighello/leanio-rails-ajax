<div class="modal-dialog" role="document">
   <div class="modal-content">
      <div class="modal-header">
         <h4 class="modal-title"><%= @hypothesis.name %></h4>
      </div>
      <div class="modal-body">
         <div class="row">
            <div class="form">
               <div class="form-group col-sm-6 col-xs-6" style="margin: 1px">
                 <label class="small">Type</label>
                 <input type="text" class="form-control" id="" value="<%= @hypothesis.area_identifier.capitalize %>" disabled>
               </div>
            </div>
         </div>
         <br>
         <div class="row">
            <div class="form">
               <div class="form-group col-xs-12" style="margin: 1px">
                  <label class="small">Description</label>
                  <textarea class="form-control" title="description" disabled><%= @hypothesis.description %></textarea>
               </div>
            </div>
         </div>
      </div>
      <div class="modal-footer">
         <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
      </div>
   </div>
</div>
