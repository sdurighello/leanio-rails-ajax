
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="form">
    <div class="form-group col-sm-6 col-xs-6" style="margin: 1px">
      <label class="small">Experiment</label>
      <input type="text" class="form-control" id="" value="<%= @result.experiment.name %>" disabled >
    </div>
    <div class="form-group col-sm-4 col-xs-6" style="margin: 1px">
      <label class="small">Validation level</label>
      <input type="text" class="form-control" id="" value="<%= @result.level.present? ? Result::LEVELS[@result.level] : 'No validation level' %>" disabled >
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="form">
    <div class="form-group col-xs-12" style="margin: 1px">
      <label class="small">Comment</label>
      <textarea type="text" class="form-control" id="" disabled ><%= @result.comment %></textarea>
    </div>
  </div>
</div>
<hr>
<%= link_to 'Edit', edit_project_result_path(@project, @result), class: 'btn btn-success' %>
<%= link_to 'Back', project_path(@project, selected_tab: 3), class: 'btn btn-info' %>
