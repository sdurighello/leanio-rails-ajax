
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="form">
    <div class="form-group col-sm-6">
      <label class="small">Experiment</label>
      <input type="text" class="form-control" id="" value="<%= @result.experiment.name %>" disabled >
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="form">
    <div class="form-group col-sm-4">
      <label class="small">Validation level</label>
      <input type="text" class="form-control" id="" value="<%= @result.validation_level.present? ? @result.validation_level_string : 'No validation level' %>" disabled >
    </div>
    <div class="form-group col-sm-4">
      <label class="small">Pain level</label>
      <input type="text" class="form-control" id="" value="<%= @result.pain_level.present? ? @result.pain_level_string : 'No pain level' %>" disabled >
    </div>
    <div class="form-group col-sm-4">
      <label class="small">Priority</label>
      <input type="text" class="form-control" id="" value="<%= @result.priority.present? ? @result.priority_string : 'No priority' %>" disabled >
    </div>
  </div>
</div>
<br>
<div class="row">
  <div class="form">
    <div class="form-group col-xs-12">
      <label class="small">Comment</label>
      <textarea type="text" class="form-control" id="" disabled ><%= @result.comment %></textarea>
    </div>
  </div>
</div>
<hr>
<%= link_to 'Edit', edit_project_result_path(@project, @result), class: 'btn btn-success' %>
<%= link_to 'Back', project_path(@project, selected_tab: 3), class: 'btn btn-info' %>
